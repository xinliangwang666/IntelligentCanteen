.pay-container {
  padding: 60rpx 40rpx;
  background: #fff;
  min-height: 100vh;
}
.pay-container .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
  text-align: center;
  margin-bottom: 40rpx;
}
.pay-container .order-info {
  text-align: center;
  font-size: 28rpx;
  color: #444;
  margin-bottom: 50rpx;
}
.pay-container .order-info .price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}
.pay-container .qrcode-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pay-container .qrcode-area .qrcode {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.pay-container .qrcode-area .tip {
  font-size: 26rpx;
  color: #888;
}
.pay-container .countdown {
  margin: 50rpx auto 30rpx;
  text-align: center;
  font-size: 28rpx;
}
.pay-container .countdown .highlight {
  color: #ff6b6b;
  font-weight: bold;
}
.pay-container .countdown .expired {
  color: red;
  font-weight: bold;
}
.pay-container .pay-btn {
  width: 100%;
  height: 90rpx;
  background: #ff6b6b;
  color: white;
  font-size: 32rpx;
  border-radius: 12rpx;
}
.pay-container .pay-btn:disabled {
  background: #ccc;
}