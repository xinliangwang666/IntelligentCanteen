.shop-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.shop-container .top-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}
.shop-container .top-bar .delivery-type {
  display: flex;
  margin-right: 30rpx;
}
.shop-container .top-bar .delivery-type .type-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  margin: 0;
  font-size: 28rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
}
.shop-container .top-bar .delivery-type .type-btn.active {
  background: #007aff;
  color: white;
}
.shop-container .top-bar .delivery-type .type-btn::after {
  border: none;
}
.shop-container .top-bar .search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 30rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
}
.shop-container .main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
}
.shop-container .main-content .category-list {
  width: 200rpx;
  background: #f8f8f8;
}
.shop-container .main-content .category-list .category-item {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #666;
  border-left: 6rpx solid transparent;
}
.shop-container .main-content .category-list .category-item.active {
  background: white;
  color: #007aff;
  border-left-color: #007aff;
  font-weight: bold;
}
.shop-container .main-content .dish-list {
  flex: 1;
  padding: 20rpx 30rpx;
}
.shop-container .main-content .dish-list .dish-card {
  display: flex;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}
.shop-container .main-content .dish-list .dish-card .dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}
.shop-container .main-content .dish-list .dish-card .dish-info {
  flex: 1;
  padding: 20rpx;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer .price {
  color: #ff4444;
  font-size: 36rpx;
  font-weight: bold;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer .quantity-control {
  display: flex;
  align-items: center;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer .quantity-control button {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  margin: 0 10rpx;
  border-radius: 50%;
  background: #f5f5f5;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer .quantity-control button[disabled] {
  opacity: 0.5;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer .quantity-control .btn-plus {
  background: #007aff;
  color: white;
}
.shop-container .main-content .dish-list .dish-card .dish-info .dish-footer .quantity-control .quantity {
  min-width: 40rpx;
  text-align: center;
}
.shop-container .checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.06);
}
.shop-container .checkout-bar .total-price {
  font-size: 32rpx;
}
.shop-container .checkout-bar .total-price .price {
  color: #ff4444;
  font-weight: bold;
}
.shop-container .checkout-bar .checkout-btn {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 60rpx;
  background: #007aff;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
}
.shop-container .checkout-bar .checkout-btn::after {
  border: none;
}
.shop-container .category-list .category-item {
  position: relative;
}
.shop-container .category-list .category-item.active {
  background: linear-gradient(90deg, #f8f8f8, white);
}
.shop-container .category-list .category-item.active .category-count {
  color: #007aff;
}
.shop-container .category-list .category-item .category-count {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}
.shop-container .dish-card {
  position: relative;
  transition: all 0.3s ease;
}
.shop-container .dish-card:active {
  transform: scale(0.98);
}
.shop-container .dish-card .dish-header {
  display: flex;
  align-items: center;
}
.shop-container .dish-card .dish-header .dish-tag {
  margin-left: 15rpx;
  padding: 4rpx 12rpx;
  background: #ffeaea;
  color: #ff4444;
  font-size: 20rpx;
  border-radius: 8rpx;
}
.shop-container .dish-card .dish-image {
  border: 4rpx solid rgba(0, 0, 0, 0.06);
}
.shop-container .dish-card .quantity-control button {
  transition: all 0.2s ease;
}
.shop-container .dish-card .quantity-control button:active {
  transform: scale(0.9);
}
.shop-container .checkout-btn {
  transition: all 0.3s ease;
}
.shop-container .checkout-btn[disabled] {
  background: #ccc !important;
  opacity: 0.8;
}