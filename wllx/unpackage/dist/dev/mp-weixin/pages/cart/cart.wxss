.cart-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f9f9f9;
}
.footer-logo {
  position: relative;
  top: -375rpx;
  width: 600rpx;
  height: 350rpx;
  display: block;
  margin: 200rpx auto 0;
  opacity: 0.5;
}
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}
.nav-bar .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}
.nav-bar .clear-btn {
  color: #999;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}
.nav-bar .clear-btn:active {
  background: #f0f0f0;
}
.cart-list {
  flex: 1;
  padding: 10rpx 0rpx;
}
.cart-list .cart-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 24rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}
.cart-list .cart-item:active {
  transform: scale(0.98);
}
.cart-list .cart-item .dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
}
.cart-list .cart-item .info {
  flex: 1;
}
.cart-list .cart-item .info .name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}
.cart-list .cart-item .info .spec {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}
.cart-list .cart-item .info .price {
  color: #ff6b6b;
  font-size: 30rpx;
  font-weight: bold;
}
.cart-list .cart-item .quantity-control {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.cart-list .cart-item .quantity-control .btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  font-size: 32rpx;
  text-align: center;
  background: #f0f0f0;
  color: #666;
}
.cart-list .cart-item .quantity-control .btn.plus {
  background: #ff6b6b;
  color: white;
}
.cart-list .cart-item .quantity-control .btn[disabled] {
  opacity: 0.5;
}
.cart-list .cart-item .quantity-control .count {
  width: 60rpx;
  text-align: center;
  font-size: 30rpx;
  margin: 0 12rpx;
}
.cart-list .empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}
.cart-list .empty-tip .empty-icon {
  width: 260rpx;
  height: 260rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}
.cart-list .empty-tip .tip-text {
  color: #aaa;
  font-size: 28rpx;
}
.checkout-bar {
  position: fixed;
  bottom: 90rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background: white;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
}
.checkout-bar .total-info {
  flex: 1;
}
.checkout-bar .total-info .total-count {
  color: #666;
  font-size: 28rpx;
  margin-right: 16rpx;
}
.checkout-bar .total-info .total-price {
  font-size: 30rpx;
}
.checkout-bar .total-info .total-price .price {
  color: #ff6b6b;
  font-weight: bold;
}
.checkout-bar .checkout-btn {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  text-align: center;
  transition: background 0.3s;
}
.checkout-bar .checkout-btn.disabled {
  background: #ccc;
  opacity: 0.7;
}