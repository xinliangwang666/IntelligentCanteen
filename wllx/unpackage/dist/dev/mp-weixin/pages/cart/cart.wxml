<view class="cart-container"><view class="nav-bar"><text class="title">🛒 我的购物车</text><text class="clear-btn" bindtap="{{a}}">清空</text></view><scroll-view class="cart-list" scroll-y><view wx:if="{{b}}"><view wx:for="{{c}}" wx:for-item="item" wx:key="i" class="cart-item"><image class="dish-image" src="{{item.a}}" mode="aspectFill"/><view class="info"><view class="name">{{item.b}}</view><view class="spec">{{item.c}}</view><view class="price">￥{{item.d}}</view></view><view class="quantity-control"><button class="btn minus" catchtap="{{item.e}}" disabled="{{item.f}}">-</button><text class="count">{{item.g}}</text><button class="btn plus" catchtap="{{item.h}}">+</button></view></view></view><view wx:else class="empty-tip"><image class="empty-icon" src="{{d}}"/><text class="tip-text">购物车还是空的哦~</text></view></scroll-view><view class="checkout-bar"><view class="total-info"><text class="total-count">共{{e}}件</text><text class="total-price">合计：<text class="price">￥{{f}}</text></text></view><button class="{{['checkout-btn', g && 'disabled']}}" bindtap="{{h}}">去结算</button></view><image class="footer-logo" src="{{i}}" alt="Footer Logo"/></view>