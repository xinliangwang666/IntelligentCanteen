.shop-list-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}
.logo {
  position: absolute;
  top: 1rpx;
  /* 距离顶部的距离 */
  left: 10rpx;
  /* 距离左边的距离 */
  width: 250rpx;
  /* 设置图片宽度 */
  height: 100rpx;
  /* 设置图片高度 */
  z-index: 10;
  /* 确保 logo 显示在最前面 */
}
.header-bar {
  padding: 30rpx;
  background: #ffffff;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  /* 确保子元素可以使用绝对定位 */
}
.header-bar .header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}
.search-bar .search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.search-bar .search-btn {
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #007aff;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.search-bar .search-btn::after {
  border: none;
}
.summary {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #999;
}
.shop-list {
  flex: 1;
  padding: 30rpx 0;
}
.shop-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  width: 100%;
}
.shop-card .shop-image {
  width: 100%;
  height: 360rpx;
}
.shop-card .shop-info {
  padding: 30rpx;
}
.shop-card .shop-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.shop-card .shop-header .shop-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.shop-card .shop-header .shop-tag {
  padding: 6rpx 16rpx;
  background: #ffeaea;
  color: #ff4444;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.shop-card .rating-section {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  color: #666;
}
.shop-card .rating-section .stars {
  margin-right: 15rpx;
}
.shop-card .rating-section .stars .star-icon {
  font-size: 32rpx;
}
.shop-card .rating-section .rating-text {
  margin-right: 30rpx;
  color: #ffb400;
  font-weight: bold;
}
.shop-card .rating-section .sales {
  font-size: 26rpx;
}
.shop-card .info-line {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
  font-size: 26rpx;
  color: #666;
}
.shop-card .info-line .icon {
  margin-right: 8rpx;
}
.shop-card .promotion-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}
.shop-card .promotion-section .promo-tag {
  padding: 8rpx 16rpx;
  background: #fff0f0;
  color: #ff4444;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ffcccc;
}
.shop-card .enter-btn {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  background: #007aff;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.shop-card .enter-btn::after {
  border: none;
}
.empty-tip {
  text-align: center;
  color: #999;
  padding: 80rpx 0;
  font-size: 28rpx;
}