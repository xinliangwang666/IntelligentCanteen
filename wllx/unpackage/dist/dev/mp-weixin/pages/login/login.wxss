.login-container {
  padding: 60rpx 40rpx;
  background: linear-gradient(to bottom right, #f5f7fa, #dbeafe);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.login-container .logo {
  width: 500rpx;
  height: 230rpx;
  margin-bottom: 50rpx;
  display: block;
  margin: 0 auto;
  position: relative;
  top: -50rpx;
}
.identity-picker {
  display: flex;
  margin-bottom: 50rpx;
  background: #ffffff;
  border-radius: 50rpx;
  padding: 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}
.identity-picker .role-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666;
  border-radius: 40rpx;
  transition: all 0.2s;
}
.identity-picker .role-item.active {
  background: linear-gradient(to right, #007aff, #00c6ff);
  color: white;
  font-weight: bold;
  box-shadow: 0 6rpx 12rpx rgba(0, 122, 255, 0.25);
}
.login-form {
  background: #ffffff;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.05);
}
.login-form .input-group {
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 40rpx;
}
.login-form .input-group .input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.login-form .input-group .form-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  background: #f8f8f8;
}
.login-form .input-group .form-input:focus {
  border-color: #007aff;
  background: #ffffff;
}
.login-form .input-group .eye-icon {
  position: absolute;
  right: 10rpx;
  font-size: 34rpx;
  color: #999;
}
.login-form .login-btn {
  background: linear-gradient(to right, #007aff, #00c6ff);
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 34rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 18rpx rgba(0, 122, 255, 0.25);
  transition: all 0.2s;
}
.login-form .login-btn:active {
  opacity: 0.8;
}
.assist-links {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.assist-links text {
  padding: 12rpx;
}
.assist-links text:active {
  opacity: 0.7;
}
.third-login {
  margin-top: 80rpx;
}
.third-login .divider {
  position: relative;
  height: 1rpx;
  background: #ccc;
  margin: 40rpx 0;
}
.third-login .divider .divider-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: linear-gradient(to bottom right, #f5f7fa, #dbeafe);
  padding: 0 20rpx;
  color: #999;
  font-size: 24rpx;
}
.third-login .wechat-btn {
  background: #07c160;
  color: white;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 18rpx rgba(7, 193, 96, 0.25);
}
.third-login .wechat-btn .wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}
.placeholder {
  color: #bbb;
}